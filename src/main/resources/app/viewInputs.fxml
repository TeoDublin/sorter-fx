         <VBox.margin>
            <Insets left="10.0" right="10.0" />
         </VBox.margin>
         <children>
            <HBox id="row" fx:id="etichette" alignment="TOP_CENTER" minHeight="50.0" minWidth="580.0" prefHeight="50.0" prefWidth="580.0">
               <children>
                  <ImageView fitHeight="48.0" fitWidth="400.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@excel.png" />
                     </image>
                  </ImageView>
                  <Label prefHeight="102.0" prefWidth="482.0" text="FILE ETICHETTE">
                     <font>
                        <Font size="35.0" />
                     </font>
                  </Label>
                  <ImageView fx:id="gifEtichette" fitHeight="48.0" fitWidth="284.0" pickOnBounds="true" preserveRatio="true">
