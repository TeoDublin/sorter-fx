                  </ImageView>
               </children>
               <VBox.margin>
                  <Insets bottom="20.0" left="10.0" right="10.0" />
               </VBox.margin>
            </HBox>
            <HBox id="row" fx:id="stock" alignment="CENTER_LEFT" minHeight="50.0" minWidth="580.0" prefHeight="50.0" prefWidth="580.0">
               <children>
