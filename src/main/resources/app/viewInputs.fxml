                  <ImageView fitHeight="48.0" fitWidth="165.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@excel.png" />
                     </image>
                  </ImageView>
                  <Label prefHeight="102.0" prefWidth="482.0" text="FILES JOB SORTER">
